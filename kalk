using System;

class EngineeringCalculator
{
    static void Main(string[] args)
    {
        while (true)
        {
            Console.WriteLine("Инженерный калькулятор");
            Console.WriteLine("Выберите операцию:");
            Console.WriteLine("1. Сложение");
            Console.WriteLine("2. Вычитание");
            Console.WriteLine("3. Умножение");
            Console.WriteLine("4. Деление");
            Console.WriteLine("5. Возведение в степень");
            Console.WriteLine("6. Квадратный корень");
            Console.WriteLine("7. Синус");
            Console.WriteLine("8. Косинус");
            Console.WriteLine("9. Тангенс");
            Console.WriteLine("10. Котангенс");
            Console.WriteLine("0. main");

            Console.Write("Введите свой выбор: ");
            int choice = int.Parse(Console.ReadLine());

            double result = 0;

            switch (choice)
            {
                case 1:
                    result = Addition();
                    break;
                case 2:
                    result = Subtraction();
                    break;
                case 3:
                    result = Multiplication();
                    break;
                case 4:
                    result = Division();
                    break;
                case 5:
                    result = Exponentiation();
                    break;
                case 6:
                    result = SquareRoot();
                    break;
                case 7:
                    result = Sine();
                    break;
                case 8:
                    result = Cosine();
                    break;
                case 9:
                    result = Tangent();
                    break;
                case 10:
                    result = Cotangent();
                    break;
                case 0:
                    Environment.Exit(0);
                    break;
                default:
                    Console.WriteLine("Недопустимый выбор!");
                    continue;
            }

            Console.WriteLine("Результат: " + result);
        }
    }

    static double Addition()
    {
        Console.Write("Введите первое число: ");
        double num1 = double.Parse(Console.ReadLine());
        Console.Write("Введите второе число: ");
        double num2 = double.Parse(Console.ReadLine());
        return num1 + num2;
    }

    static double Subtraction()
    {
        Console.Write("Введите первое число: ");
        double num1 = double.Parse(Console.ReadLine());
        Console.Write("Введите второе число: ");
        double num2 = double.Parse(Console.ReadLine());
        return num1 - num2;
    }

    static double Multiplication()
    {
        Console.Write("Введите первое число: ");
        double num1 = double.Parse(Console.ReadLine());
        Console.Write("Введите второе число: ");
        double num2 = double.Parse(Console.ReadLine());
        return num1 * num2;
    }

    static double Division()
    {
        Console.Write("Введите делимое: ");
        double dividend = double.Parse(Console.ReadLine());
        Console.Write("Введите делитель: ");
        double divisor = double.Parse(Console.ReadLine());

        if (divisor == 0)
        {
            Console.WriteLine("Нельзя делить на ноль!");
            return double.NaN;
        }

        return dividend / divisor;
    }

    static double Exponentiation()
    {
        Console.Write("Введите число: ");
        double @base = double.Parse(Console.ReadLine());
        Console.Write("Введите степень: ");
        double exponent = double.Parse(Console.ReadLine());
        return Math.Pow(@base, exponent);
    }

    static double SquareRoot()
    {
        Console.Write("Введите число: ");
        double number = double.Parse(Console.ReadLine());
        return Math.Sqrt(number);
    }

    static double Sine()
    {
        Console.Write("Введите угол в градусах: ");
        double angle = double.Parse(Console.ReadLine());
        return Math.Sin(angle * Math.PI / 180.0);
    }

    static double Cosine()
    {
        Console.Write("Введите угол в градусах: ");
        double angle = double.Parse(Console.ReadLine());
        return Math.Cos(angle * Math.PI / 180.0);
    }

    static double Tangent()
    {
        Console.Write("Введите угол в градусах: ");
        double angle = double.Parse(Console.ReadLine());
        return Math.Tan(angle * Math.PI / 180.0);
    }

    static double Cotangent()
    {
        Console.Write("Введите угол в градусах: ");
        double angle = double.Parse(Console.ReadLine());
        return 1.0 / Math.Tan(angle * Math.PI / 180.0);
    }

}

